datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Department {
  id        String     @id @default(cuid())
  name      String     @unique
  employees Employee[]
}

model Employee {
  id              String     @id @default(cuid())
  name            String
  profileImageUrl String
  title           String
  department      Department @relation(fields: [departmentId], references: [id])
  departmentId    String
}
